<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Share Reads</title>
    <script src="https://kit.fontawesome.com/b795da5b50.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/dashboard-modern.css">
    <link rel="stylesheet" href="css/book-modal.css">
    <link rel="icon" href="images/book.png" type="image/png">
</head>
<body>
    <!-- Modern Navigation Header -->
    <header class="modern-header">
        <nav class="nav-container">
            <a href="/dashboard" class="nav-logo">
                <img src="images/Share Reads .png" alt="Share Reads Logo">
            </a>
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <ul class="nav-menu" id="nav-menu">
                <li><a href="/dashboard" class="active"><i class="fa-solid fa-home"></i> Home</a></li>
                <li><a href="/profileInfo"><i class="fa-solid fa-user"></i> Profile</a></li>
                <li><a href="/booklist"><i class="fa-solid fa-book"></i> My Books</a></li>
                <li>
                    <a href="/notifications">
                        <i class="fa-solid fa-bell"></i> Notifications
                        <% if (unreadCount > 0) { %>
                            <span class="notification-badge"><%= unreadCount %></span>
                        <% } %>
                    </a>
                </li>
                <li><a href="/" style="color: #f5576c;"><i class="fa-solid fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
    </header>
    
    <!-- Hero Section -->
    <section class="dashboard-hero">
        <div class="hero-badge">
            <i class="fa-solid fa-sparkles"></i> Welcome to Share Reads
        </div>
        <h1 class="hero-title">Discover Amazing Books</h1>
        <p class="hero-subtitle">Browse through our collection of books available for sharing</p>
    </section>

    <!-- Search Section -->
    <section class="search-section">
        <form action="/searchBooks" method="GET" class="search-container">
            <input type="text" name="query" placeholder="Search for books, authors, or genres..." required>
            <button type="submit">
                <i class="fa-solid fa-search"></i> Search
            </button>
        </form>
    </section>

    <!-- Books Grid Section -->
    <section class="books-section">
        <div class="books-grid">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <div class="book-card-image-wrapper">
                        <img src="<%= book.bookImage %>" alt="<%= book.title %>" class="book-card-image">
                        <div class="book-card-badge">
                            <i class="fa-solid fa-star"></i> Available
                        </div>
                    </div>
                    <div class="book-card-content">
                        <h2 class="book-card-title"><%= book.title %></h2>
                        <p class="book-card-author">by <%= book.author %></p>
                        
                        <div class="book-card-details">
                            <div class="book-card-detail">
                                <i class="fa-solid fa-user"></i>
                                <span><%= book.userId.name %></span>
                            </div>
                            <div class="book-card-detail">
                                <i class="fa-solid fa-location-dot"></i>
                                <span><%= book.userId.division %></span>
                            </div>
                        </div>

                        <div class="book-card-actions">
                            <button class="btn-view" onclick="openBookModal('<%= book.userId.username %>', '<%= book._id %>')">
                                <i class="fa-solid fa-eye"></i> View Details
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>" class="pagination-btn">
                    <i class="fa-solid fa-arrow-left"></i> Previous
                </a>
            <% } %>
            
            <div class="pagination-info">
                Page <%= currentPage %> of <%= totalPages %>
            </div>
            
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>" class="pagination-btn">
                    Next <i class="fa-solid fa-arrow-right"></i>
                </a>
            <% } %>
        </div>
    </section>

    <!-- Modern Footer -->
    <footer class="modern-footer">
        <div class="footer-main">
            <div class="footer-section footer-about">
                <div class="footer-logo">
                    <i class="fa-solid fa-book-open"></i>
                    <span>Share Reads</span>
                </div>
                <p class="footer-description">
                    A community platform for book lovers to share, discover, and borrow books. Connect with fellow readers and give your books a new life!
                </p>
                <div class="footer-social">
                    <a href="#" class="social-link" aria-label="Facebook">
                        <i class="fa-brands fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Twitter">
                        <i class="fa-brands fa-twitter"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Instagram">
                        <i class="fa-brands fa-instagram"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="LinkedIn">
                        <i class="fa-brands fa-linkedin-in"></i>
                    </a>
                </div>
            </div>

            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="/dashboard"><i class="fa-solid fa-chevron-right"></i> Browse Books</a></li>
                    <li><a href="/booklist"><i class="fa-solid fa-chevron-right"></i> My Books</a></li>
                    <li><a href="/search"><i class="fa-solid fa-chevron-right"></i> Search</a></li>
                    <li><a href="/profileInfo"><i class="fa-solid fa-chevron-right"></i> My Profile</a></li>
                    <li><a href="/notifications"><i class="fa-solid fa-chevron-right"></i> Notifications</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>Support</h3>
                <ul class="footer-links">
                    <li><a href="#"><i class="fa-solid fa-chevron-right"></i> Help Center</a></li>
                    <li><a href="#"><i class="fa-solid fa-chevron-right"></i> FAQs</a></li>
                    <li><a href="#"><i class="fa-solid fa-chevron-right"></i> Privacy Policy</a></li>
                    <li><a href="#"><i class="fa-solid fa-chevron-right"></i> Terms of Service</a></li>
                    <li><a href="#"><i class="fa-solid fa-chevron-right"></i> Community Guidelines</a></li>
                </ul>
            </div>

            <div class="footer-section">
                <h3>Contact Us</h3>
                <ul class="footer-contact-info">
                    <li>
                        <i class="fa-solid fa-envelope"></i>
                        <a href="mailto:sharereadsbd@gmail.com">sharereadsbd@gmail.com</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-phone"></i>
                        <span>+880 1XXX-XXXXXX</span>
                    </li>
                    <li>
                        <i class="fa-solid fa-location-dot"></i>
                        <span>Dhaka, Bangladesh</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="footer-copyright">
                Â© 2024 Share Reads. All rights reserved.
            </div>
            <div class="footer-credits">
                Developed by <a href="#">Nowrin Jahan</a>
            </div>
        </div>
    </footer>

    <!-- Book Details Modal -->
    <div class="book-modal-overlay" id="bookModal">
        <div class="book-modal">
            <button class="book-modal-close" onclick="closeBookModal()">
                <i class="fa-solid fa-xmark"></i>
            </button>
            <div id="modalContent" class="book-modal-loading">
                <i class="fa-solid fa-circle-notch fa-spin"></i> Loading...
            </div>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu').addEventListener('click', function () {
            this.classList.toggle('active');
            document.getElementById('nav-menu').classList.toggle('active');
        });

        // Book Modal Functions
        async function openBookModal(username, bookId) {
            const modal = document.getElementById('bookModal');
            const content = document.getElementById('modalContent');
            
            // Add a state to history so back button can close modal
            history.pushState({ modalOpen: true }, '');
            
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
            content.innerHTML = '<div class="book-modal-loading"><i class="fa-solid fa-circle-notch fa-spin"></i> Loading...</div>';
            
            try {
                const response = await fetch(`/api/book-details?username=${username}&bookId=${bookId}`);
                const data = await response.json();
                
                if (data.success) {
                    content.innerHTML = generateModalContent(data);
                } else {
                    content.innerHTML = '<div class="book-modal-loading">Error loading book details</div>';
                }
            } catch (error) {
                console.error('Error:', error);
                content.innerHTML = '<div class="book-modal-loading">Error loading book details</div>';
            }
        }

        function closeBookModal() {
            const modal = document.getElementById('bookModal');
            if (modal.classList.contains('active')) {
                modal.classList.remove('active');
                document.body.style.overflow = 'auto';
                
                // Remove the modal state from history if it exists
                if (history.state && history.state.modalOpen) {
                    history.back();
                }
            }
        }

        // Handle browser back button
        window.addEventListener('popstate', function(event) {
            const modal = document.getElementById('bookModal');
            if (modal.classList.contains('active')) {
                modal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });

        // Close modal on overlay click
        document.getElementById('bookModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeBookModal();
            }
        });

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeBookModal();
            }
        });

        function generateModalContent(data) {
            const { book, user, requestExists } = data;
            const stars = generateStars(book.rating);
            
            return `
                <div class="book-modal-content">
                    <div class="book-modal-left">
                        <img src="${book.bookImage}" alt="${book.title}" class="book-modal-cover">
                        <h2 class="book-modal-title">${book.title}</h2>
                        <p class="book-modal-author">by ${book.author}</p>
                        <div class="book-modal-tags">
                            <span class="book-tag"><i class="fa-solid fa-book"></i> Available</span>
                        </div>
                    </div>
                    
                    <div class="book-modal-right">
                        <div class="book-modal-section">
                            <h3 class="book-modal-section-title">
                                <i class="fa-solid fa-quote-left"></i> Review
                            </h3>
                            <div class="book-modal-review">
                                ${book.review}
                            </div>
                        </div>
                        
                        <div class="book-modal-section">
                            <h3 class="book-modal-section-title">
                                <i class="fa-solid fa-star"></i> Rating
                            </h3>
                            <div class="book-modal-rating">
                                <div class="book-modal-stars">${stars}</div>
                                <span class="book-modal-rating-text">${book.rating} / 5</span>
                            </div>
                        </div>
                        
                        <div class="book-modal-section">
                            <h3 class="book-modal-section-title">
                                <i class="fa-solid fa-user"></i> Book Owner
                            </h3>
                            <div class="book-modal-owner">
                                <div class="owner-header">
                                    <img src="${user.profileImage || '/images/user.png'}" alt="${user.name}" class="owner-avatar">
                                    <div class="owner-info">
                                        <h3>${user.name}</h3>
                                        <p>@${user.username}</p>
                                    </div>
                                </div>
                                <div class="owner-details">
                                    <div class="owner-detail-item">
                                        <i class="fa-solid fa-envelope"></i>
                                        <span>${user.email}</span>
                                    </div>
                                    <div class="owner-detail-item">
                                        <i class="fa-solid fa-map"></i>
                                        <span>${user.division}</span>
                                    </div>
                                    <div class="owner-detail-item">
                                        <i class="fa-solid fa-location-dot"></i>
                                        <span>${user.address}</span>
                                    </div>
                                    ${user.phone ? `
                                    <div class="owner-detail-item">
                                        <i class="fa-solid fa-phone"></i>
                                        <span>${user.phone}</span>
                                    </div>
                                    ` : ''}
                                </div>
                            </div>
                        </div>
                        
                        <div class="book-modal-actions">
                            <form action="/sendRequest" method="POST" onsubmit="handleRequestSubmit(event)">
                                <input type="hidden" name="toUserId" value="${user._id}">
                                <input type="hidden" name="bookId" value="${book._id}">
                                <button type="submit" class="btn-modal-request ${requestExists ? 'cancel' : ''}">
                                    ${requestExists 
                                        ? '<i class="fa-solid fa-times"></i> Cancel Request' 
                                        : '<i class="fa-solid fa-paper-plane"></i> Send Request'}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            `;
        }

        function generateStars(rating) {
            let stars = '';
            for (let i = 0; i < 5; i++) {
                if (i < rating) {
                    stars += '<i class="fa-solid fa-star"></i>';
                } else {
                    stars += '<i class="fa-regular fa-star"></i>';
                }
            }
            return stars;
        }

        function handleRequestSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);
            
            fetch(form.action, {
                method: 'POST',
                body: formData
            })
            .then(response => response.text())
            .then(() => {
                closeBookModal();
                window.location.reload();
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        }
    </script>
</body>
</html>
