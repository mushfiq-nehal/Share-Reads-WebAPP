<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - Share Reads</title>
    <script src="https://kit.fontawesome.com/b795da5b50.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/dashboard-modern.css">
    <link rel="icon" href="images/book.png" type="image/png">
</head>
<body>
    <!-- Modern Navigation Header -->
    <header class="modern-header">
        <nav class="nav-container">
            <a href="/dashboard" class="nav-logo">
                <img src="images/Share Reads .png" alt="Share Reads Logo">
            </a>
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <ul class="nav-menu" id="nav-menu">
                <li><a href="/dashboard"><i class="fa-solid fa-home"></i> Home</a></li>
                <li><a href="/profileInfo"><i class="fa-solid fa-user"></i> Profile</a></li>
                <li><a href="/booklist"><i class="fa-solid fa-book"></i> My Books</a></li>
                <li><a href="/notifications"><i class="fa-solid fa-bell"></i> Notifications</a></li>
                <li><a href="/" style="color: #ff9a9e;"><i class="fa-solid fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
    </header>
    
    <!-- Hero Section -->
    <section class="dashboard-hero">
        <div class="hero-badge">
            <i class="fa-solid fa-magnifying-glass"></i> Search Results
        </div>
        <h1 class="hero-title">Results for "<%= query %>"</h1>
        <p class="hero-subtitle">Found <%= books.length %> book<%= books.length !== 1 ? 's' : '' %> matching your search</p>
    </section>

    <!-- Search Section -->
    <section class="search-section">
        <form action="/searchBooks" method="GET" class="search-container">
            <input type="text" name="query" value="<%= query %>" placeholder="Search for books, authors, or genres..." required>
            <button type="submit">
                <i class="fa-solid fa-search"></i> Search
            </button>
        </form>
    </section>

    <!-- Books Grid Section -->
    <% if (books.length > 0) { %>
        <section class="books-section">
            <div class="books-grid">
                <% books.forEach(function(book) { %> 
                    <div class="book-card">
                        <div class="book-card-image-wrapper">
                            <img src="<%= book.bookImage %>" alt="<%= book.title %>" class="book-card-image">
                            <div class="book-card-badge">
                                <i class="fa-solid fa-star"></i> Available
                            </div>
                        </div>
                        <div class="book-card-content">
                            <h2 class="book-card-title"><%= book.title %></h2>
                            <p class="book-card-author">by <%= book.author %></p>
                            
                            <div class="book-card-details">
                                <div class="book-card-detail">
                                    <i class="fa-solid fa-user"></i>
                                    <span><%= book.userId.name %></span>
                                </div>
                                <div class="book-card-detail">
                                    <i class="fa-solid fa-location-dot"></i>
                                    <span><%= book.userId.division %></span>
                                </div>
                            </div>

                            <div class="book-card-actions">
                                <form action="/viewDetails" method="GET" style="flex: 1;">
                                    <input type="hidden" name="username" value="<%= book.userId.username %>">
                                    <input type="hidden" name="bookId" value="<%= book._id %>">
                                    <button type="submit" class="btn-view">
                                        <i class="fa-solid fa-eye"></i> View Details
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="/searchBooks?query=<%= query %>&page=<%= currentPage - 1 %>" class="pagination-btn">
                        <i class="fa-solid fa-arrow-left"></i> Previous
                    </a>
                <% } %>
                
                <div class="pagination-info">
                    Page <%= currentPage %> of <%= totalPages %>
                </div>
                
                <% if (currentPage < totalPages) { %>
                    <a href="/searchBooks?query=<%= query %>&page=<%= currentPage + 1 %>" class="pagination-btn">
                        Next <i class="fa-solid fa-arrow-right"></i>
                    </a>
                <% } %>
            </div>
        </section>
    <% } else { %>
        <section class="empty-state">
            <div class="empty-state-icon">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
            <h2 class="empty-state-title">No books found</h2>
            <p class="empty-state-text">We couldn't find any books matching "<%= query %>". Try a different search term.</p>
        </section>
    <% } %>

    <!-- Modern Footer -->
    <footer class="modern-footer">
        <div class="footer-content">
            <div class="footer-text">
                <i class="fa-solid fa-heart"></i> Made with love by CSE Dept. of JUST
            </div>
            <div class="footer-contact">
                <i class="fa-solid fa-envelope"></i> <a href="mailto:sharereadsbd@gmail.com">sharereadsbd@gmail.com</a>
            </div>
        </div>
        <hr class="footer-divider">
        <div class="footer-copyright">
            Â© 2024 Share Reads. All rights reserved.
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu').addEventListener('click', function () {
            this.classList.toggle('active');
            document.getElementById('nav-menu').classList.toggle('active');
        });
    </script>
</body>
</html>
