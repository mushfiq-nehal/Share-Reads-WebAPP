<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Share Reads</title>
    <script src="https://kit.fontawesome.com/b795da5b50.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/dashboard-modern.css">
    <link rel="icon" href="images/book.png" type="image/png">
    <style>
        .profile-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 32px 80px;
        }
        
        .profile-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            padding: 48px;
            box-shadow: 0 8px 32px rgba(139, 127, 199, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.5);
        }
        
        .profile-header {
            display: flex;
            align-items: center;
            gap: 32px;
            margin-bottom: 40px;
            padding-bottom: 32px;
            border-bottom: 2px solid rgba(139, 127, 199, 0.1);
        }
        
        .profile-image-wrapper {
            flex-shrink: 0;
        }
        
        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(139, 127, 199, 0.2);
            box-shadow: 0 8px 24px rgba(139, 127, 199, 0.2);
        }
        
        .profile-info {
            flex: 1;
        }
        
        .profile-name {
            font-size: 36px;
            font-weight: 700;
            color: #4a4a68;
            margin-bottom: 8px;
        }
        
        .profile-details {
            background: rgba(139, 127, 199, 0.05);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 24px;
        }
        
        .detail-row {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
            border-bottom: 1px solid rgba(139, 127, 199, 0.1);
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-icon {
            width: 24px;
            color: #8b7fc7;
            text-align: center;
        }
        
        .detail-label {
            font-weight: 600;
            color: #4a4a68;
            min-width: 100px;
        }
        
        .detail-value {
            color: #8e8ea7;
        }
        
        .btn-edit {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 14px 32px;
            background: linear-gradient(135deg, #8b7fc7 0%, #a89fd9 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(139, 127, 199, 0.25);
        }
        
        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(139, 127, 199, 0.35);
            color: white;
        }
        
        .btn-requests {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 14px 32px;
            background: white;
            color: #8b7fc7;
            border: 2px solid #8b7fc7;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            margin-left: 12px;
        }
        
        .btn-requests:hover {
            background: rgba(139, 127, 199, 0.08);
            transform: translateY(-2px);
            color: #8b7fc7;
        }
        
        @media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
            }
            
            .profile-card {
                padding: 32px 24px;
            }
            
            .btn-edit, .btn-requests {
                width: 100%;
                margin-left: 0;
                margin-top: 12px;
            }
        }
    </style>
</head>
<body>
    <!-- Modern Navigation Header -->
    <header class="modern-header">
        <nav class="nav-container">
            <a href="/dashboard" class="nav-logo">
                <img src="images/Share Reads .png" alt="Share Reads Logo">
            </a>
            <div class="menu-toggle" id="mobile-menu">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
            <ul class="nav-menu" id="nav-menu">
                <li><a href="/dashboard"><i class="fa-solid fa-home"></i> Home</a></li>
                <li><a href="/profileInfo" class="active"><i class="fa-solid fa-user"></i> Profile</a></li>
                <li><a href="/booklist"><i class="fa-solid fa-book"></i> My Books</a></li>
                <li>
                    <a href="/notifications">
                        <i class="fa-solid fa-bell"></i> Notifications
                        <% if (unreadCount > 0) { %>
                            <span class="notification-badge"><%= unreadCount %></span>
                        <% } %>
                    </a>
                </li>
                <li><a href="/" style="color: #ff9a9e;"><i class="fa-solid fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="dashboard-hero">
        <div class="hero-badge">
            <i class="fa-solid fa-user-circle"></i> My Profile
        </div>
        <h1 class="hero-title">Profile Information</h1>
        <p class="hero-subtitle">View and manage your account details</p>
    </section>
    
    <!-- Profile Content -->
    <section class="profile-container">
        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-image-wrapper">
                    <% if (typeof userImage != "undefined") { %>
                        <img src="<%= userImage %>" alt="Profile Picture" class="profile-image">
                    <% } else { %>
                        <img src="images/user.png" alt="Profile Picture" class="profile-image">
                    <% } %>
                </div>
                
                <div class="profile-info">
                    <h1 class="profile-name"><%= userName %></h1>
                    <div style="margin-top: 20px;">
                        <button onclick="openEditModal()" class="btn-edit">
                            <i class="fa-solid fa-edit"></i> Edit Profile
                        </button>
                        <a href="/viewSentRequest" class="btn-requests">
                            <i class="fa-solid fa-paper-plane"></i> My Requests
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="profile-details">
                <div class="detail-row">
                    <div class="detail-icon">
                        <i class="fa-solid fa-venus-mars"></i>
                    </div>
                    <div class="detail-label">Gender:</div>
                    <div class="detail-value"><%= userGender %></div>
                </div>
                
                <div class="detail-row">
                    <div class="detail-icon">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div class="detail-label">Email:</div>
                    <div class="detail-value"><%= userEmail %></div>
                </div>
                
                <div class="detail-row">
                    <div class="detail-icon">
                        <i class="fa-solid fa-map"></i>
                    </div>
                    <div class="detail-label">Division:</div>
                    <div class="detail-value"><%= userDivision %></div>
                </div>
                
                <div class="detail-row">
                    <div class="detail-icon">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div class="detail-label">Address:</div>
                    <div class="detail-value"><%= userAddress %></div>
                </div>
                
                <div class="detail-row">
                    <div class="detail-icon">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="detail-label">Phone:</div>
                    <div class="detail-value"><%= userPhone %></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Edit Profile Modal -->
    <div class="edit-profile-modal" id="editProfileModal">
        <div class="edit-modal-content">
            <div class="edit-modal-header">
                <h2><i class="fa-solid fa-user-edit"></i> Edit Profile</h2>
                <button class="edit-modal-close" onclick="closeEditModal()">
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>
            
            <form action="/profile" method="post" enctype="multipart/form-data" class="edit-profile-form">
                <div class="modal-form-grid">
                    <!-- Profile Image Section -->
                    <div class="form-group-modal full-width">
                        <label class="modal-label">
                            <i class="fa-solid fa-camera"></i> Profile Image
                        </label>
                        <div class="current-image-preview">
                            <% if (typeof userImage != "undefined") { %>
                                <img src="<%= userImage %>" alt="Current Profile" id="currentProfilePreview">
                            <% } else { %>
                                <img src="images/user.png" alt="Current Profile" id="currentProfilePreview">
                            <% } %>
                        </div>
                        <div class="file-input-wrapper-modal">
                            <input type="file" name="profileImage" id="profileImageInput" accept="image/*" onchange="previewImage(event)">
                            <label for="profileImageInput" class="file-input-label-modal">
                                <i class="fa-solid fa-cloud-upload-alt"></i>
                                <span id="fileNameDisplay">Choose new photo</span>
                            </label>
                        </div>
                        <form action="/deletePhoto" method="POST" style="margin-top: 10px;">
                            <button type="submit" class="btn-delete-photo">
                                <i class="fa-solid fa-trash"></i> Remove Current Photo
                            </button>
                        </form>
                    </div>

                    <!-- Address -->
                    <div class="form-group-modal full-width">
                        <label class="modal-label">
                            <i class="fa-solid fa-location-dot"></i> Address
                        </label>
                        <input type="text" class="modal-input" name="address" placeholder="Enter your address" value="<%= userAddress %>" required>
                    </div>

                    <!-- Phone -->
                    <div class="form-group-modal">
                        <label class="modal-label">
                            <i class="fa-solid fa-phone"></i> Phone Number
                        </label>
                        <input type="text" class="modal-input" name="phone" placeholder="Phone number" value="<%= userPhone %>" required>
                    </div>

                    <!-- Division -->
                    <div class="form-group-modal">
                        <label class="modal-label">
                            <i class="fa-solid fa-map"></i> Division
                        </label>
                        <select class="modal-input" name="division" required>
                            <option value="">Choose division...</option>
                            <option value="Dhaka" <%= userDivision === 'Dhaka' ? 'selected' : '' %>>Dhaka</option>
                            <option value="Rajshai" <%= userDivision === 'Rajshai' ? 'selected' : '' %>>Rajshai</option>
                            <option value="Chattogram" <%= userDivision === 'Chattogram' ? 'selected' : '' %>>Chattogram</option>
                            <option value="Barishal" <%= userDivision === 'Barishal' ? 'selected' : '' %>>Barishal</option>
                            <option value="Rangpur" <%= userDivision === 'Rangpur' ? 'selected' : '' %>>Rangpur</option>
                            <option value="Khulna" <%= userDivision === 'Khulna' ? 'selected' : '' %>>Khulna</option>
                            <option value="Mymensingh" <%= userDivision === 'Mymensingh' ? 'selected' : '' %>>Mymensingh</option>
                            <option value="Sylhet" <%= userDivision === 'Sylhet' ? 'selected' : '' %>>Sylhet</option>
                        </select>
                    </div>

                    <!-- Gender -->
                    <div class="form-group-modal">
                        <label class="modal-label">
                            <i class="fa-solid fa-venus-mars"></i> Gender
                        </label>
                        <select class="modal-input" name="gender" required>
                            <option value="">Choose gender...</option>
                            <option value="Male" <%= userGender === 'Male' ? 'selected' : '' %>>Male</option>
                            <option value="Female" <%= userGender === 'Female' ? 'selected' : '' %>>Female</option>
                            <option value="Other" <%= userGender === 'Other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn-modal-cancel" onclick="closeEditModal()">
                        <i class="fa-solid fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn-modal-save">
                        <i class="fa-solid fa-check"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/modern-footer') %>

    <style>
        .edit-profile-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(8px);
            z-index: 10000;
            padding: 20px;
            overflow-y: auto;
            animation: fadeIn 0.3s ease;
        }

        .edit-profile-modal.active {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .edit-modal-content {
            background: white;
            border-radius: 24px;
            max-width: 700px;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 24px 72px rgba(0, 0, 0, 0.3);
            animation: slideUp 0.4s ease;
            position: relative;
        }

        .edit-modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 28px 32px;
            border-bottom: 2px solid rgba(139, 127, 199, 0.1);
            position: sticky;
            top: 0;
            background: white;
            border-radius: 24px 24px 0 0;
            z-index: 10;
        }

        .edit-modal-header h2 {
            font-size: 24px;
            font-weight: 700;
            color: #4a4a68;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .edit-modal-close {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(139, 127, 199, 0.1);
            border: none;
            color: #8b7fc7;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .edit-modal-close:hover {
            background: rgba(139, 127, 199, 0.2);
            transform: rotate(90deg);
        }

        .edit-profile-form {
            padding: 32px;
        }

        .modal-form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 24px;
        }

        .form-group-modal {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .form-group-modal.full-width {
            grid-column: 1 / -1;
        }

        .modal-label {
            font-size: 14px;
            font-weight: 600;
            color: #4a4a68;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .modal-input {
            padding: 14px 16px;
            border: 2px solid rgba(139, 127, 199, 0.2);
            border-radius: 12px;
            font-size: 15px;
            font-family: 'Inter', sans-serif;
            transition: all 0.3s ease;
            background: white;
        }

        .modal-input:focus {
            outline: none;
            border-color: #8b7fc7;
            box-shadow: 0 0 0 4px rgba(139, 127, 199, 0.1);
        }

        .current-image-preview {
            display: flex;
            justify-content: center;
            margin-bottom: 16px;
        }

        .current-image-preview img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(139, 127, 199, 0.2);
            box-shadow: 0 4px 16px rgba(139, 127, 199, 0.2);
        }

        .file-input-wrapper-modal {
            position: relative;
        }

        .file-input-wrapper-modal input[type="file"] {
            display: none;
        }

        .file-input-label-modal {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 14px 24px;
            background: linear-gradient(135deg, rgba(139, 127, 199, 0.1) 0%, rgba(168, 159, 217, 0.1) 100%);
            border: 2px dashed rgba(139, 127, 199, 0.3);
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            color: #8b7fc7;
        }

        .file-input-label-modal:hover {
            background: linear-gradient(135deg, rgba(139, 127, 199, 0.15) 0%, rgba(168, 159, 217, 0.15) 100%);
            border-color: #8b7fc7;
        }

        .btn-delete-photo {
            width: 100%;
            padding: 10px 20px;
            background: linear-gradient(135deg, #ffd4d4 0%, #ff9a9e 100%);
            color: #8b1538;
            border: none;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-delete-photo:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 154, 158, 0.3);
        }

        .modal-actions {
            display: flex;
            gap: 12px;
            padding-top: 24px;
            border-top: 2px solid rgba(139, 127, 199, 0.1);
        }

        .btn-modal-cancel {
            flex: 1;
            padding: 16px 24px;
            background: rgba(139, 127, 199, 0.1);
            color: #8b7fc7;
            border: 2px solid rgba(139, 127, 199, 0.2);
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-modal-cancel:hover {
            background: rgba(139, 127, 199, 0.15);
        }

        .btn-modal-save {
            flex: 1;
            padding: 16px 24px;
            background: linear-gradient(135deg, #8b7fc7 0%, #a89fd9 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            box-shadow: 0 8px 20px rgba(139, 127, 199, 0.25);
        }

        .btn-modal-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 28px rgba(139, 127, 199, 0.35);
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .modal-form-grid {
                grid-template-columns: 1fr;
            }

            .edit-modal-header {
                padding: 20px;
            }

            .edit-profile-form {
                padding: 20px;
            }

            .modal-actions {
                flex-direction: column;
            }
        }
    </style>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu').addEventListener('click', function () {
            this.classList.toggle('active');
            document.getElementById('nav-menu').classList.toggle('active');
        });

        // Open edit profile modal
        function openEditModal() {
            document.getElementById('editProfileModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Close edit profile modal
        function closeEditModal() {
            document.getElementById('editProfileModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        document.getElementById('editProfileModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeEditModal();
            }
        });

        // Preview selected image
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('currentProfilePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
                document.getElementById('fileNameDisplay').textContent = file.name;
            }
        }

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeEditModal();
            }
        });
    </script>
</body>
</html>